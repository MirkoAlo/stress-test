{
  // Extends base Astro Config
  "extends": "astro/tsconfigs/strict",
  // Sets custom aliases for Astro 
  // https: //docs.astro.build/en/guides/aliases/
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@utils/*": [
        "src/utils/utils"
      ],
      "@css/*": [
        "src/css/*"
      ],
      "@js/*": [
        "src/js/*"
      ],
      "@page/*": [
        "src/pages/*"
      ],
      "@template/*": [
        "src/template/*"
      ]
    }
  }
}